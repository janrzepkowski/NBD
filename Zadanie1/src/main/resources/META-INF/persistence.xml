<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
  <persistence-unit name="default" transaction-type="RESOURCE_LOCAL">
    <class>models.Client</class>
    <class>models.Vehicle</class>
    <class>models.Rent</class>
    <class>managers.ClientManager</class>
    <class>repositories.ClientRepository</class>

    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <shared-cache-mode>NONE</shared-cache-mode>
<!--    <validation-mode>CALLBACK</validation-mode>-->
    <properties>
      <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
      <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5555/nbddb"/>
      <property name="jakarta.persistence.jdbc.user" value="nbd"/>
      <property name="jakarta.persistence.jdbc.password" value="nbdpassword"/>
      <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQL82Dialect"/>
      <property name="hibernate.hbm2ddl.auto" value="update"/>
      <property name="jakarta.persistence.schema-generation.database.action" value="drop-and-create"/>
      <property name="hibernate.show_sql" value="true"/>
      <property name="hibernate.format_sql" value="true"/>
      <property name="hibernate.highlight_sql" value="true"/>
    </properties>
  </persistence-unit>
</persistence>