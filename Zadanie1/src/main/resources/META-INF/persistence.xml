<persistence xmlns="https://jakarta.ee/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd" version="3.0">
  <persistence-unit name="default" transaction-type="RESOURCE_LOCAL">

    <class>models.Client</class>
    <class>models.Vehicle</class>
    <class>models.Rent</class>

    <properties>
      <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
      <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5555/nbddb"/>
      <property name="jakarta.persistence.jdbc.user" value="nbd"/>
      <property name="jakarta.persistence.jdbc.password" value="nbdpassword"/>
      <property name="jakarta.persistence.schema-generation.database.action" value="drop-and-create"/>
    </properties>
  </persistence-unit>
</persistence>